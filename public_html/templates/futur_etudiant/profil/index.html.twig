{% extends 'layout.html.twig' %}


{% block content %}
    <div id="hero-section">
        <div class="container_page">
            <div class="hero-image-center col-sm-12">


                <h1 id="h1-no-width">{{ page }}</h1>

            </div>
        </div>
    </div>
<div class="quiz-layout2 allovinny">
    <div class="col-md-12">
        <div class="contenuInteractif">
            <p id='progression' class="progressionRouge no-js"></p>
            <p id="erreurQuiz1">{{ erreur }}</p>
        </div>
    </div>
    <div class="col-md-12">
        <form name="quiz_bon_profil" action="futur_etudiant/profil" method="GET">
            {% for i in 0..9 %}
                <div class="row">
                    <fieldset id="Q{{ i }}">
                        <div class="col-sm-6 back-rouge">
                            <h3 id="qProfil{{ i }}">{{ xml[i]['texteQuestion'] }}</h3>
                        </div>
                        <div class="col-sm-6 back-blanc-rouge">
                            <ul class="choixReponses">
                                {% for j in 0..3 %}
                                    <li>
                                        <input id="Q{{ i }}{{ tId[j] }}" type="radio" name="Q{{ i }}" value="{{ xml[i]['pointage'][j] }}">
                                        <label for="Q{{ i }}{{ tId[j] }}"><span class="number">{{ j + 1 }}</span>{{ xml[i]['texteReponse'][j] }}</label>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </fieldset>
                </div>
            {% endfor %}
            <input id='validerQuiz' class="btnQuizRouge" name='validerQuiz' type="submit" value="Valider">
            <div class="contenuInteractif2">
                <p id='retroaction'></p>
            </div>
        </form>
    </div>
</div>
{% endblock%}