{% extends 'layout.html.twig' %}

{% block content %}
    <div id="hero-section">
        <div class="container_page">
            <div class="hero-image-center col-sm-12">


                <h1 id="h1-no-width">{{ page }}</h1>

            </div>
        </div>
    </div>
    <div class="container equipe">

        {% for valeur in arrTextes %}
            <h2>{{ valeur['titre'] }}</h2>
            <hr class="title-underline">
            {{ valeur['paragraphe'] | raw }}
        {% endfor %}

        <div class="conteneur_enseignants">
            {% for valeur in arrProfs %}
                <div class="col-sm-4">
                    <div class="contenu_enseignant">
                        <img class="photo_prof"
                             src="dist/images/photo_enseignants/enseignant_{{ valeur['id_prof'] }}.png"
                             alt="{{ valeur['prenom'] }} {{ valeur['nom']}}"/>
                        <hr class="trait_decoratif">
                        <div class="contenu_prof">
                            <span class="nom_prof">{{ valeur['prenom'] }}<br/>{{ valeur['nom'] | upper  }}</span>
                            <div class="conteneur_sociaux">
                                <ul class="liste_reseaux_sociaux">
                                    {% if valeur['courriel'] is not null %}
                                        <li><a  class="blue-btn" href="nous_joindre/?type=prof&slug={{ valeur['slug'] }}">
                                        <picture>
                                            <img src="dist/images/sociaux/mail.png" srcset="dist/images/sociaux/mail.png 1x, dist/images/sociaux/mail2x.png 2x" alt="Courriel" />
                                        </picture>
                                        <span class="back_slant"></span></a></li>
                                    {% endif %}

                                    {% if valeur['pseudo'] is not null %}
                                        <li><a  class="blue-btn" target="_blank" href="https://twitter.com/{{ valeur['pseudo'] }}">
                                        <picture>
                                            <img src="dist/images/sociaux/twitter.png" srcset="dist/images/sociaux/twitter.png 1x, dist/images/sociaux/twitter2x.png 2x" alt="Twitter" />
                                        </picture>
                                        <span class="back_slant"></span></a></li>
                                    {% endif %}
                                    {% if valeur['linkedin'] is not null %}
                                        <li><a  class="blue-btn" target="_blank" href="{{ valeur['linkedin'] }}">
                                        <picture>
                                            <img src="dist/images/sociaux/linkedin.png" srcset="dist/images/sociaux/linkedin.png 1x, dist/images/sociaux/linkedin2x.png 2x" alt="Linkedin" />
                                        </picture>
                                        <span class="back_slant"></span></a></li>
                                    {% endif %}
                                    {% if valeur['site'] is not null %}
                                        <li><a  class="blue-btn" target="_blank" href="{{ valeur['site'] }}">
                                        <picture>
                                            <img src="dist/images/sociaux/internet.png" srcset="dist/images/sociaux/internet.png 1x, dist/images/sociaux/internet2x.png 2x" alt="Site internet" />
                                        </picture>                        
                                        <span class="back_slant"></span></a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
