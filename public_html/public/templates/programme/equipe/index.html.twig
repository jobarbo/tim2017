{# Intégration du layout de base #}
{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="titre_equipe">ÉQUIPE</h1>
    <div class="container_page">


        {% for valeur in arrTextes %}
            <h2>{{ valeur['titre'] }}</h2>
            {{ valeur['paragraphe'] | raw }}
        {% endfor %}
        <div class="conteneur_enseignants">
            {% for valeur in arrProfs %}
                <div class="col-sm-4">
                    <div class="contenu_enseignant">
                        <img class="photo_prof"
                             src="dist/images/photo_enseignants/enseignant_{{ valeur['id_prof'] }}.png"
                             alt="{{ valeur['prenom'] }} {{ valeur['nom']}}"/>
                        <hr class="trait_decoratif">
                        <div class="contenu_prof">
                            <span class="nom_prof">{{ valeur['prenom'] }}<br/>{{ valeur['nom'] | upper  }}</span>
                            <div class="conteneur_sociaux">
                                <ul class="liste_reseaux_sociaux">
                                    {% if valeur['courriel'] is not null %}
                                        <li><a href="{{ valeur['courriel'] }}"><img src="dist/images/sociaux/mail.png"
                                                                                    alt="Courriel"/></a></li>
                                    {% endif %}
                                    {% if valeur['pseudo'] is not null %}
                                        <li><a href="https://twitter.com/{{ valeur['pseudo'] }}"><img src="dist/images/sociaux/twitter.png"
                                                                                  alt="Twitter"/></a></li>
                                    {% endif %}
                                    {% if valeur['linkedin'] is not null %}
                                        <li><a href="{{ valeur['linkedin'] }}"><img src="dist/images/sociaux/linkedin.png"
                                                                                    alt="Linkedin"/></a></li>
                                    {% endif %}
                                    {% if valeur['site'] is not null %}
                                        <li><a href="{{ valeur['site'] }}"><img src="dist/images/sociaux/internet.png"
                                                                                alt="Internet"/></a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
