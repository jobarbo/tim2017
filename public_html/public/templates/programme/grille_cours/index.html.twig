{# Intégration du layout de base #}
{% extends 'layout.html.twig' %}


{% block content %}
<style>
    body {
        background-color: white;
    }
    .allovinny {
        max-width: 1440px;
        margin: 0 auto;
    }
    table {
        font-family: sans-serif;
        font-size: 14px;
        width: 100%;
        margin-bottom: 60px;
        text-align: center;
        box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
    }
    a {
        font-size: 16px;
    }
    th, td {
        text-align: left;
        padding: 0 10px;
    }
    th {
        height: 50px;
        color: black;
    }
    td {
        padding: 15px 10px 15px 10px;
        min-height: 40px;
    }
    tr:nth-of-type(even) {
        background-color: #f7f7f7;
    }
    tr:nth-of-type(odd) {
        background-color: white;
    }
    span {
        padding-top: 10px;
        display: block;
    }
    table:nth-of-type(2), table:nth-of-type(3), table:nth-of-type(4), table:nth-of-type(5) , table:nth-of-type(6) , table:nth-of-type(7)   {
        margin-top: 50px;
    }
    .formationS {
        background-color: #00acff;
        color: white;
    }
    .formationG {
        background-color: #ff2424;
        color: white;
    }
    thead tr.tableau-bleu th {
        background-color: #0098ff;
        color: white !important;
    }
    .lienS {
        color: #00acff;
    }
    .lienG {
        color: #ff2424;
    }
    .minWidthTd {
        width: 75%;
    }
    h1, h2 {
        padding: 20px;
    }
</style>
    <div class="allovinny">
        <section class="haut_page">
            <h1>{{ page }}</h1>
        </section>
        <section class="grille_cours">
            {% for i in 1..6 %}
                {% if  (i  == 1) %}
                    <h2>Première année</h2>
                {% endif %}
                {% if  (i  == 3) %}
                    <h2>Deuxième année</h2>
                {% endif %}
                {% if  (i  == 5) %}
                    <h2>Troisième année</h2>
                {% endif %}
                <div class="col-sm-6">
                    <table>
                        <thead>
                        <tr class="tableau-bleu">
                            <th>
                                Session {{ i }}
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td class="formationS">
                                Formation spécifique
                            </td>
                            <td class="formationS">durée</td>
                            <td class="formationS">pond.</td>
                        </tr>
                        {% for cour in cours %}
                            {% if cour.session == i and cour.specifique == 1 %}
                                <tr>
                                    <td class="minWidthTd">
                                        <a class="lienS" href="programme/grille_cours/fiche_cours?id={{ cour.id }}">{{ cour.nom }}</a>
                                        <span>{{ cour.no }}</span>
                                    </td>
                                    <td>
                                        {{ cour.duree }}
                                    </td>
                                    <td>
                                        {{ cour.ponderation }}
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        {% if i != 6 %}
                            <tr>
                                <td class="formationG">
                                    Formation générale
                                </td>
                                <td class="formationG"></td>
                                <td class="formationG"></td>
                            </tr>
                        {% endif %}
                        {% for cour in cours %}
                            {% if cour.session == i and cour.specifique == 0 %}
                                <tr>
                                    <td class="minWidthTd">
                                        <a class="lienG" href="programme/grille_cours/fiche_cours?id={{ cour.id }}">{{ cour.nom }}</a>
                                        <span>{{ cour.no }}</span>
                                    </td>
                                    <td>
                                        {{ cour.duree }}
                                    </td>
                                    <td>
                                        {{ cour.ponderation }}
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endfor %}
        </section>
    </div>
{% endblock%}