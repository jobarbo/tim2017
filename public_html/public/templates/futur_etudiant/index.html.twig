{# Intégration du layout de base #}
{% extends 'layout.html.twig' %}


{% block content %}
    <div class="container futur_etudiant">
    <div class="col-sm-12">
        <h1>FUTUR ÉTUDIANT</h1>
        <div class="formationVivante">
            {% for valeur in arrTexteFormationVivante %}
                <h2>{{ valeur['titre'] }}</h2>
                <hr class="title-underline">
                {{ valeur['paragraphe'] | raw }}
            {% endfor %}
        </div>
        </div>
        <img class="imgtest" src="dist/images/test_image.jpg" alt="test" />

        <div class="col-sm-6 prealables">
            {% for valeur in arrTextePrealables %}
                <h2>{{ valeur['titre'] }}</h2>
                <hr class="title-underline">
                {{ valeur['paragraphe'] | raw }}
            {% endfor %}
        </div>

        <div class="col-sm-6 processus">
            {% for valeur in arrTexteProcessus %}
                <h2>{{ valeur['titre'] }}</h2>
                <hr class="title-underline">
                {{ valeur['paragraphe'] | raw }}
            {% endfor %}
        </div>

        <img class="imgtest" src="dist/images/test_image.jpg" alt="test" />


        <div class="etudiantUnJour">

            <div class="col-sm-6 contact_benoit">
                {% for valeur in arrTexteEtudiantUnJour %}
                    <h2>{{ valeur['titre'] }}</h2>
                    <hr class="title-underline">
                    {{ valeur['paragraphe'] | raw }}
                {% endfor %}
            </div>
            <div class=" col-sm-6 image_benoit">
                <img src="dist/images/photo_enseignants/enseignant_1.png" alt="Benoît Frigon"/>
            </div>
        </div>
    </div>
{% endblock %}
