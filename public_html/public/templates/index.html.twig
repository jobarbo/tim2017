{# Intégration du layout de base #}
{% extends 'layout.html.twig' %}


{% block content %}
<div class="hero-image col-sm-12">
<h1 class="hero_title"> TECHNIQUES D'INTÉGRATION MULTIMÉDIA </h1>
</div>
<section>
    <div class="accueil_news row">
        <div class="actualite_text col-sm-6">
            <h2>ACTUALITÉS</h2>

            <p class="date">{{nouvelle.date_nouvelle}}</p>
            

            <h3>{{nouvelle.titre_nouvelle}}</h3>

            <p>{{nouvelle.description_nouvelle}}</p>

            <a href="{{nouvelle.url_nouvelle}}" class="blue-btn">En savoir plus<span
                        class="back_slant"></span></a>
        </div>
        <div class="col-sm-6">
            <div class="actualite_img">
            </div>

        </div>
    </div>

</section>
<section>
    <div class="projet_home">
        <h2>RÉALISATIONS</h2>
        {{ texteErreurProjets | raw }}
                {% if texteErreurProjets == false %}
                    <ul>
                        {% for projet in arrProjets %}
                            <li>
                                <a href="diplomes/fiche_projet/index.php?id={{ projet.id }}">
                                    <div class="img_projet" style="background-image: url('dist/images/projets/prj{{ projet.id }}_01.jpg')">
                                       <!-- <picture>
                                            <source media="" srcset="../images/projets/prj408_01-mobile.jpg 1x, ../images/projets/prj408_01-mobile@2x.jpg 2x">
                                            <source media="(min-width: 800px)" srcset="../images/projets/prj408_01-table.jpg 1x, ../images/projets/prj408_01-table@2x.jpg 2x">
                                            <img src="dist/images/projets/prj{{ projet.id }}_01.jpg" alt="{{ projet.titre }}">
                                        </picture>-->
                                    </div>
                                    <span class="titre_projet">{{ projet.titre }}</span>
                                    <p>{{ projet.prenom}} {{ projet.nom}}</p>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    {{ texteErreurProjet | raw }}
                {% endif %}
    </div>

</section>
{% endblock%}
