{# Intégration du layout de base #}
{% extends 'layout.html.twig' %}

{% block content %}
<div class="container accueil_admin">
    <section class="haut_page">
        <h1 class="h1admin" id="contenu">{{ page }}</h1>
    </section>
    <section class="col-sm-12">
        <h2>Événements</h2>
        <hr class="title-underline">
        {% if erreurEvenements == false %}
            <section id="section_liste_evenements">
                <ul id="liste_evenements">
                    {% for arrEvenements in evenements %}
                        <li class="col-sm-6">
                            <p><a href="#">{{ arrEvenements.titre_actualite }}</a> {{ arrEvenements.description_actualite }}</p>
                            <a class="lien_editer" href="evenement/index.php?edit&id_actu=1"><img src="../../public_html/dist/images/editer.png" alt="Éditer un événement" />Éditer un événement</a>
                            <form action="administration.php" method="post">
                                <button id="btnSupprimer" name="btnSupprimer" value="{{ arrEvenements['id_actualite'] }}" class="lien_supprimer"><img src="../../public_html/dist/images/supprimer.png" alt="Supprimer un événement" />Supprimer l'événement</button>
                            </form>
                        </li>
                    {% endfor %}
                </ul>
            </section>
        {% endif %}
        <a href="evenement/index.php?ajout">Ajouter un événement</a>
    </section>
    <section class="col-sm-12 liste_diplomes">
        <h2>Fiches des diplômés</h2>
        <hr class="title-underline">
    {% if erreurDiplomes == false %}
        <section id="liste_fiche_etudiant">
            <ul id="liste_diplomes">
                {% for arrDiplomes in diplomes %}
                    <li>
                        <p class="nom">{{ arrDiplomes.prenom }} {{ arrDiplomes.nom }} <span><a href="fiche_etudiant/index.php?id={{ arrDiplomes.matricule }}"><img src="../../public_html/dist/images/editer.png" alt="Éditer un événement" />Éditer la fiche</a></span></p>
                    </li>
                {% endfor %}
            </ul>
        </section>
    {% endif %}
    </section>
</div>
{% endblock %}